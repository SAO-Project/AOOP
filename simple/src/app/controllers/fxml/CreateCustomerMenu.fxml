<?xml version="1.0" encoding="UTF-8"?>

<?import javafx.geometry.Insets?>
<?import javafx.scene.control.*?>
<?import javafx.scene.layout.*?>
<AnchorPane prefHeight="400.0" prefWidth="600.0" xmlns="http://javafx.com/javafx/8" xmlns:fx="http://javafx.com/fxml/1" fx:controller="app.controllers.CreateCustomerMenuController">
   <children>
      <VBox prefHeight="400.0" prefWidth="600.0">
         <children>
            <ToolBar prefHeight="47.0" prefWidth="600.0">
              <items>
                <Button fx:id="backButton" mnemonicParsing="false" onAction="#back" prefHeight="27.0" prefWidth="67.0" text="Back" />
                  <Label prefHeight="26.0" prefWidth="215.0" text="Add Customer" />
              </items>
            </ToolBar>
            <ScrollPane prefHeight="365.0" prefWidth="600.0">
               <content>
                  <HBox prefHeight="356.0" prefWidth="598.0">
                     <children>
                        <VBox prefHeight="356.0" prefWidth="216.0" spacing="25.0">
                           <children>
                              <TextField fx:id="firstNameTextField" promptText="First Name" />
                              <TextField fx:id="lastNameTextField" layoutX="10.0" layoutY="10.0" promptText="Last Name" />
                              <DatePicker fx:id="dobTextField" prefHeight="27.0" prefWidth="217.0" promptText="Date of Birth" />
                              <TextField fx:id="emailTextField" layoutX="10.0" layoutY="37.0" promptText="Email" />
                              <TextField fx:id="phoneNumberTextField" layoutX="10.0" layoutY="91.0" promptText="Phone Number" />
                              <TextField fx:id="addressTextField" promptText="Address" />
                              <Button fx:id="addToSystemButton" mnemonicParsing="false" onAction="#addToSystem" prefHeight="27.0" prefWidth="218.0" text="Add To System" />
                           </children>
                           <HBox.margin>
                              <Insets left="10.0" top="10.0" />
                           </HBox.margin>
                        </VBox>
                        <VBox layoutX="10.0" layoutY="14.0" prefHeight="356.0" prefWidth="216.0" spacing="25.0">
                           <children>
                              <Button fx:id="addFirstNameButton" mnemonicParsing="false" onAction="#setFirstName" prefHeight="27.0" prefWidth="218.0" text="Add" />
                              <Button fx:id="addLastNameButton" layoutX="10.0" layoutY="10.0" mnemonicParsing="false" onAction="#setLastName" prefHeight="27.0" prefWidth="218.0" text="Add" />
                              <Button fx:id="addDOBButton" layoutX="10.0" layoutY="62.0" mnemonicParsing="false" onAction="#setDOB" prefHeight="27.0" prefWidth="218.0" text="Add" />
                              <Button fx:id="addEmailButton" layoutX="10.0" layoutY="114.0" mnemonicParsing="false" onAction="#setEmail" prefHeight="27.0" prefWidth="218.0" text="Add" />
                              <Button fx:id="addPhoneNumberButton" layoutX="10.0" layoutY="166.0" mnemonicParsing="false" onAction="#setPhoneNumber" prefHeight="27.0" prefWidth="218.0" text="Add" />
                              <Button fx:id="addAddressButton" layoutX="10.0"
                                      layoutY="218.0" mnemonicParsing="false" onAction="#setAddress" prefHeight="27.0" prefWidth="218.0" text="Add" />
                           </children>
                           <HBox.margin>
                              <Insets top="10.0" />
                           </HBox.margin>
                        </VBox>
                     </children></HBox>
               </content>
            </ScrollPane>
         </children>
      </VBox>
   </children>
</AnchorPane>
